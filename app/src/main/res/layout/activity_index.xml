<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".toptabbar.IndexActivity">

    <!--
         android:background="#ffff00"  //导航栏背景颜色
         app:tabIndicatorColor="#66ff33" //指示器颜色
         app:tabIndicatorHeight="20dp"   //指示器高度
         app:tabTextColor="@color/colorPrimary"//普通状态下文字的颜色
         app:tabSelectedTextColor="#CC33FF"  //选中时文字的颜色
         app:tabMode="fixed" //是否可滑动：fixed：固定；scrollable：可滑动
         app:tabBackground="@drawable/selected" //设置选项卡的背景：此处要写一个selector
    -->

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        app:tabIndicatorColor="@color/rescol"
        app:tabIndicatorHeight="2dp"
        app:tabTextColor="@color/textcol"
        app:tabSelectedTextColor="@color/rescol"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/TabLayoutTextStyle"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"/>

</LinearLayout>